{
  "require": {
    "slim/slim": "^3.5",
    "slim/twig-view": "^2.1",
    "robmorgan/phinx": "^0.6.4",
    "illuminate/database": "^5.3"
  },
  "require-dev" : {
    "phpunit/phpunit" : "^5.0",
    "mockery/mockery": "dev-master"
  },
  "autoload" : {
    "psr-4" : {
      "Twitter\\" : "src"
    }
  },
  "autoload-dev" : {
    "psr-4" : {
      "Twitter\\Tests\\" : "tests"
    }
  },
  "scripts" : {
    "migrate:dev:win" : "call vendor/bin/phinx migrate -e development",
    "migrate:dev:nix" : "php vendor/bin/phinx migrate -e development"
  }
}
